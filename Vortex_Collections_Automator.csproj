<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PublishSingleFile>true</PublishSingleFile>
    <FileVersion>1.0.0</FileVersion>
    <Company>OfChaos</Company>
    <Authors>ShadeOfChaos</Authors>
    <Product>Vortex Collections Automator</Product>
    <Description>Uses screencaptures to determine the position of download buttons, clicking them. Made for Vortex, can be used for anything really.</Description>
    <Language>English</Language>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="9.0.1" />
  </ItemGroup>

</Project>
